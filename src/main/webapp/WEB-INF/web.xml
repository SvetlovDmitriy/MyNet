<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>
  <listener>
    <listener-class>com.my.web.listener.LogPathCreator</listener-class>
  </listener>
  <listener>
    <listener-class>com.my.web.listener.DaemonListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.my.web.listener.InstanceWorker</listener-class>
  </listener>
  <filter>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>com.my.web.filter.PageRedirectSecurityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>start.jsp</welcome-file>
  </welcome-file-list>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.my.web.admin.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
</web-app>
